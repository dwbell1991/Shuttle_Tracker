--MySQL on WAMP--
create database TEST_SHUTTLE_DB;
use TEST_SHUTTLE_DB;

create table coordinates (
    shuttle_id SMALLINT(3) UNSIGNED NOT NULL, 	//0-999
    latitude DECIMAL(9,6),						//###.######
    longitude DECIMAL(9,6),						//###.######
    Primary Key(shuttle_id));